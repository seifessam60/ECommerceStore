@model Product

@{
    ViewData["title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <hr />
            <p class="lead">@Model.Description</p>

            <div class="my-3">
                <span class="badge bg-secondary fs-6">@Model.Category.Name</span>
            </div>

            <h3 class="text-primary">@Model.Price.ToString("C")</h3>

            <p class="text-muted">
                @if (Model.Stock > 0)
                {
                    <span class="text-success">In Stock (@Model.Stock pcs)</span>
                }
                else
                {
                    <span class="text-danger">Out of Stock</span>
                }
            </p>

            <div class="mt-4">
                @if (Model.Stock > 0)
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <div class="input-group mb-3" style="max-width: 300px;">
                            <span class="input-group-text">Quantity</span>
                            <input type="number" name="quantity" value="1" min="1" max="@Model.Stock" class="form-control" />
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary" disabled>Out of Stock</button>
                }
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Products</a>
            </div>
        </div>
    </div>
</div>