@model Product

@{
    ViewData["title"] = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <hr />
            <p class="lead">@Model.Description</p>

            <div class="my-3">
                <span class="badge bg-secondary fs-6">@Model.Category.Name</span>
            </div>

            <h3 class="text-primary">@Model.Price.ToString("C")</h3>

            <p class="text-muted">
                @if (Model.Stock > 0)
                {
                    <span class="text-success">In Stock (@Model.Stock pcs)</span>
                }
                else
                {
                    <span class="text-danger">Out of Stock</span>
                }
            </p>

            <div class="mt-4">
                <button class="btn btn-success btn-lg">Add to Cart</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to Products</a>
            </div>
        </div>
    </div>
</div>