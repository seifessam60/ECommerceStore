@model IEnumerable<Product>
@{
    ViewData["title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">

    <h1>All Products</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>
    </div>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 400px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="text-primary fw-bold">@product.Price.ToString("C")</p>
                        <span class="badge bg-secondary">@product.Category.Name</span>
                    </div>
                    <div class="card-footer d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary w-100">Show Details</a>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning flex-fill">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>