@model IEnumerable<ECommerceStore.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-box-seam"></i> All Orders
    </h1>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order Number</th>
                        <th>Customer Name</th>
                        <th>Order Date</th>
                        <th>Order Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.Id</strong></td>
                            <td>@order.CustomerName</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                            <td class="fw-bold text-primary">@order.TotalAmount.ToString("C")</td>
                            <td>
                                @switch (order.Status)
                                {
                                    case ECommerceStore.Models.OrderStatus.Pending:
                                        <span class="badge bg-warning">Pending</span>
                                        break;
                                    case ECommerceStore.Models.OrderStatus.Processing:
                                        <span class="badge bg-info">Processing</span>
                                        break;
                                    case ECommerceStore.Models.OrderStatus.Shipped:
                                        <span class="badge bg-primary">Shipped</span>
                                        break;
                                    case ECommerceStore.Models.OrderStatus.Delivered:
                                        <span class="badge bg-success">Delivered</span>
                                        break;
                                    case ECommerceStore.Models.OrderStatus.Cancelled:
                                        <span class="badge bg-danger">Cancelled</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem;"></i>
            <h3 class="mt-3">No orders yet</h3>
        </div>
    }
</div>
