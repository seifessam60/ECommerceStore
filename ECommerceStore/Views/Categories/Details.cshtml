@model ECommerceStore.Models.Category

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@Model.Name</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Category</a>
            <a asp-action="Index" class="btn btn-secondary">Back to Categories</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5>Description:</h5>
            <p>@Model.Description</p>
            <p class="text-muted"><small>Number of products: @Model.Products?.Count</small></p>
        </div>
    </div>

    <h3 class="mb-3">Products in this category:</h3>

    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 400px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="text-primary fw-bold">@product.Price.ToString("C")</p>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            There are currently no products in this category.
        </div>
    }
</div>
