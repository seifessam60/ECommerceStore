@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>All Categories</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Category
        </a>
    </div>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@category.Description</p>
                        <p class="text-muted">
                            <small>Number of products: @category.Products?.Count</small>
                        </p>
                    </div>
                    <div class="card-footer d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-primary flex-fill">View Products</a>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>